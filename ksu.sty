% Footline: AUTHOR | DATE | TITLE

\defbeamertemplate*{footline}{ksu theme}{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=5ex, dp=1ex,center]{title in head/foot}%
        \usebeamerfont{title in head/foot}\large{\insertshortauthor}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=5ex,dp=1ex,center]{author in head/foot}%
        \usebeamerfont{author in head/foot}\large{\insertshortdate}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=5ex,dp=1ex,center]{title in head/foot}%
        \usebeamerfont{title in head/foot}\large{\insertdate}
  \end{beamercolorbox}%
  }%
  \vskip0pt%
}

